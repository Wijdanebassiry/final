@model IEnumerable<WebApplication6.Models.FicheProjet>
@{
    ViewData["Title"] = "Liste des Fiches Projet";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
<h2>@ViewData["Title"]</h2>

<!-- Barre de recherche -->
<div class="row mb-3">
    <div class="col-md-6">
        <form method="get" class="form-inline">
            <div class="input-group">
                <input type="text" name="searchNumero" class="form-control" placeholder="Rechercher par numéro de projet..." value="@ViewBag.SearchNumero" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-outline-secondary">Rechercher</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <form method="get" class="form-inline">
            <div class="input-group">
                <input type="date" name="searchDate" class="form-control" value="@ViewBag.SearchDate" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-outline-secondary">Rechercher</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Bouton pour effacer les filtres -->
@if (!string.IsNullOrEmpty(ViewBag.SearchNumero) || !string.IsNullOrEmpty(ViewBag.SearchDate))
{
    <div class="mb-3">
        <a asp-action="Index" class="btn btn-outline-danger">Effacer les filtres</a>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Créer une nouvelle fiche projet</a>
</p>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Numéro Projet</th>
            <th>Nom Client</th>
            <th>Date</th>
            <th>Budget</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.NumeroProjet</td>
            <td>@item.NomClient</td>
            <td>@(item.DernierDelaiLivraison?.ToString("dd/MM/yyyy") ?? "")</td>
            <td>-</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Détails</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Modifier</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Supprimer</a>
                <a asp-action="TestModification" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Test</a>
            </td>
        </tr>
    }
    </tbody>
</table> 